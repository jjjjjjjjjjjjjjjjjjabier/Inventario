<Window x:Class="InventarioComputo.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:InventarioComputo.UI.Views"
        xmlns:vm="clr-namespace:InventarioComputo.UI.ViewModels"
        Title="Sistema de Inventario de Cómputo" Width="1200" Height="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:EquiposComputoViewModel}">
            <views:EquiposComputoView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EstadosViewModel}">
            <views:EstadosView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UnidadesViewModel}">
            <views:UnidadesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UbicacionesViewModel}">
            <views:UbicacionesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TiposEquipoViewModel}">
            <views:TiposEquipoView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportesViewModel}">
            <views:ReportesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UsuariosViewModel}">
            <views:UsuariosView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="MenuPanel" Background="#1F2A37" Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ToggleButton Content="≡" Margin="8" Width="34" Height="34"
                          HorizontalAlignment="Left"
                          Click="MenuToggleButton_Click" />
            <StackPanel Grid.Row="1" Margin="8,16,8,8">
                <Button Content="Equipos" Margin="0,4" Command="{Binding NavigateToEquiposComputoCommand}" />
                <Button Content="Estados" Margin="0,4" Command="{Binding NavigateToEstadosCommand}" />
                <Button Content="Unidades" Margin="0,4" Command="{Binding NavigateToUnidadesCommand}" />
                <Button Content="Ubicaciones" Margin="0,4" Command="{Binding NavigateToUbicacionesCommand}" />
                <Button Content="Tipos de Equipo" Margin="0,4" Command="{Binding NavigateToTiposEquipoCommand}" />
                <Button Content="Reportes" Margin="0,4" Command="{Binding NavigateToReportesCommand}" />
                <Button Content="Usuarios" Margin="0,4" Command="{Binding NavigateToUsuariosCommand}" />
            </StackPanel>
        </Grid>

        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>