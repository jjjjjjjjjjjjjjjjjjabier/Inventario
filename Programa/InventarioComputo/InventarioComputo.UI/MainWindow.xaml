<Window x:Class="InventarioComputo.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InventarioComputo.UI.ViewModels"
        xmlns:views="clr-namespace:InventarioComputo.UI.Views"
        Title="Inventario de Cómputo"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Mapear VM -> View -->
        <DataTemplate DataType="{x:Type vm:EquiposComputoViewModel}">
            <views:EquiposComputoView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EstadosViewModel}">
            <views:EstadosView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UnidadesViewModel}">
            <views:UnidadesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UbicacionesViewModel}">
            <views:UbicacionesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TiposEquipoViewModel}">
            <views:TiposEquipoView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportesViewModel}">
            <views:ReportesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UsuariosViewModel}">
            <views:UsuariosView/>
        </DataTemplate>
    </Window.Resources>

    <!-- Layout principal con menú lateral -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- PANEL DEL MENÚ: IMPORTANTE x:Name="MenuPanel" -->
        <Border x:Name="MenuPanel"
                Grid.Column="0"
                Width="200"
                Background="{StaticResource SecondaryBrush}">
            <StackPanel Margin="8">
                <!-- Botón hamburguesa que dispara la animación en code-behind -->
                <ToggleButton Content="☰"
                              Width="40" Height="30"
                              Click="MenuToggleButton_Click"
                              ToolTip="Mostrar/Ocultar menú"/>

                <Separator Margin="0,8,0,8"/>

                <!-- Navegación -->
                <Button Content="Equipos" Command="{Binding NavigateToEquiposComputoCommand}" Margin="0,4,0,0" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource AccentBrush}"/>
                <Button Content="Estados" Command="{Binding NavigateToEstadosCommand}" Margin="0,4,0,0" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource AccentBrush}"/>
                <Button Content="Unidades" Command="{Binding NavigateToUnidadesCommand}" Margin="0,4,0,0" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource AccentBrush}"/>
                <Button Content="Ubicaciones" Command="{Binding NavigateToUbicacionesCommand}" Margin="0,4,0,0" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource AccentBrush}"/>
                <Button Content="Tipos de Equipo" Command="{Binding NavigateToTiposEquipoCommand}" Margin="0,4,0,0" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource AccentBrush}"/>
                <Button Content="Reportes" Command="{Binding NavigateToReportesCommand}" Margin="0,4,0,0" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource AccentBrush}"/>
                <Button Content="Usuarios" Command="{Binding NavigateToUsuariosCommand}" Margin="0,4,0,0" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource AccentBrush}"/>

                <Separator Margin="0,8,0,8"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding NombreUsuario}" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button Content="Cerrar sesión" Command="{Binding CerrarSesionCommand}" Style="{StaticResource ActionButtonStyle}" Background="#A33"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Contenido actual -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>