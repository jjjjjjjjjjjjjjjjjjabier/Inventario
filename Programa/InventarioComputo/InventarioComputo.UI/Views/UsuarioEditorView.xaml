<Window x:Class="InventarioComputo.UI.Views.UsuarioEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:InventarioComputo.UI.Behaviors"
        Title="{Binding Titulo}" Height="560" Width="520"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Titulo}" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1">
            <Label Content="Usuario:" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding NombreUsuario}" Style="{StaticResource TextBoxStyle}"/>

            <Label Content="Nombre completo:" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding NombreCompleto}" Style="{StaticResource TextBoxStyle}"/>

            <Label Content="Contraseña:" Style="{StaticResource LabelStyle}"/>
            <PasswordBox behaviors:PasswordBoxBehavior.Attach="True"
                         behaviors:PasswordBoxBehavior.Password="{Binding Password, Mode=TwoWay}"
                         Margin="0,0,0,10" Height="30" Padding="6"/>

            <Label Content="Confirmar contraseña:" Style="{StaticResource LabelStyle}"/>
            <PasswordBox behaviors:PasswordBoxBehavior.Attach="True"
                         behaviors:PasswordBoxBehavior.Password="{Binding ConfirmPassword, Mode=TwoWay}"
                         Margin="0,0,0,10" Height="30" Padding="6"/>

            <CheckBox Content="Activo" IsChecked="{Binding Activo}" Style="{StaticResource CheckBoxStyle}"/>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="Roles" Margin="0,10,0,16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Roles}" Margin="8">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- RolCheckboxViewModel expone Nombre e IsSelected -->
                            <CheckBox Content="{Binding Nombre}" IsChecked="{Binding IsSelected}" Margin="0,4"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Guardar" Command="{Binding GuardarCommand}" Style="{StaticResource DialogButtonStyle}"/>
            <Button Content="Cancelar" Command="{Binding CloseCommand}" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>