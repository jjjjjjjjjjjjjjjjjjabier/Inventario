<Window x:Class="InventarioComputo.UI.Views.UsuarioEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Titulo}"
        Height="520" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Border Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="{Binding Titulo}"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       Foreground="#2C3E50"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Datos del usuario -->
                    <Border Background="#F9F9F9"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            Padding="15"
                            Margin="0,0,0,15"
                            CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Información del Usuario"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"
                                       Foreground="#2C3E50"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                    <TextBlock Text="Nombre de usuario:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NombreUsuario, UpdateSourceTrigger=PropertyChanged}"
                                             Height="35" Padding="10,5"
                                             VerticalContentAlignment="Center"
                                             BorderThickness="1" BorderBrush="#CCCCCC"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                    <TextBlock Text="Email:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                             Height="35" Padding="10,5"
                                             VerticalContentAlignment="Center"
                                             BorderThickness="1" BorderBrush="#CCCCCC"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                                    <TextBlock Text="Nombre completo:" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NombreCompleto, UpdateSourceTrigger=PropertyChanged}"
                                             Height="35" Padding="10,5"
                                             VerticalContentAlignment="Center"
                                             BorderThickness="1" BorderBrush="#CCCCCC"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Password (opcional según tu VM; no se enlaza el PasswordBox por seguridad) -->
                    <Border Background="#F9F9F9"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            Padding="15"
                            Margin="0,0,0,15"
                            CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Contraseña"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"
                                       Foreground="#2C3E50"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Contraseña:" Style="{StaticResource LabelStyle}"/>
                                    <PasswordBox x:Name="PasswordBox"
                                                 Height="35" Padding="10,5"
                                                 VerticalContentAlignment="Center"
                                                 BorderThickness="1" BorderBrush="#CCCCCC"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Confirmar contraseña:" Style="{StaticResource LabelStyle}"/>
                                    <PasswordBox x:Name="ConfirmPasswordBox"
                                                 Height="35" Padding="10,5"
                                                 VerticalContentAlignment="Center"
                                                 BorderThickness="1" BorderBrush="#CCCCCC"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Roles -->
                    <Border Background="#F9F9F9"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            Padding="15"
                            Margin="0,0,0,15"
                            CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Roles"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"
                                       Foreground="#2C3E50"/>

                            <ItemsControl Grid.Row="1"
                                          ItemsSource="{Binding Roles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Nombre}"
                                                  IsChecked="{Binding IsSelected}"
                                                  Margin="0,0,0,5"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>

                    <!-- Estado -->
                    <Border Background="#F9F9F9"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            Padding="15"
                            Margin="0,0,0,15"
                            CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Estado"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"
                                       Foreground="#2C3E50"/>
                            <CheckBox Content="Usuario activo" IsChecked="{Binding Activo}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Botones -->
            <StackPanel Grid.Row="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Guardar"
                        Command="{Binding GuardarCommand}"
                        CommandParameter="{Binding ElementName=PasswordBox}"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,0,10,0"/>
                <Button Content="Cancelar"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>