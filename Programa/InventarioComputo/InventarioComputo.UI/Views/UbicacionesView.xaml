<UserControl x:Class="InventarioComputo.UI.Views.UbicacionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioComputo.UI.Views"
             xmlns:converters="clr-namespace:InventarioComputo.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecera con título y opciones -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Gestión de Ubicaciones" FontSize="20" FontWeight="Bold" Margin="0,0,15,0"/>
                <CheckBox Content="Mostrar inactivas" IsChecked="{Binding MostrarInactivas}" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" 
                        Visibility="{Binding EsAdministrador, Converter={StaticResource BoolToVis}}">
                <Button Content="Nueva Sede" Command="{Binding CrearSedeCommand}" 
                        Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Panel principal con jerarquía de ubicaciones -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel de Sedes -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Encabezado de Sedes -->
                <Border Grid.Row="0" Background="#2c3e50" Padding="10,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Sedes" Foreground="White" FontWeight="SemiBold"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                  Visibility="{Binding EsAdministrador, Converter={StaticResource BoolToVis}}">
                            <Button Content="✏️" ToolTip="Editar Sede" Command="{Binding EditarSedeCommand}" 
                                    Margin="0,0,5,0" Style="{StaticResource MenuButtonStyle}" Padding="5,0"/>
                            <Button Content="❌" ToolTip="Desactivar Sede" Command="{Binding EliminarSedeCommand}" 
                                    Style="{StaticResource MenuButtonStyle}" Padding="5,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Lista de Sedes -->
                <ListBox Grid.Row="1" ItemsSource="{Binding Sedes}" SelectedItem="{Binding SedeSeleccionada}"
                         BorderThickness="1,0,1,1" BorderBrush="#DDDDDD">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center"/>
                                <Ellipse Grid.Column="1" Width="8" Height="8" Margin="5,0,0,0">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{Binding Activo, Converter={StaticResource StatusColorConverter}}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Separador visual -->
            <GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Center" 
                          Background="Transparent"/>

            <!-- Panel de Áreas -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Encabezado de Áreas -->
                <Border Grid.Row="0" Background="#2c3e50" Padding="10,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Áreas" Foreground="White" FontWeight="SemiBold"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                  Visibility="{Binding EsAdministrador, Converter={StaticResource BoolToVis}}">
                            <Button Content="➕" ToolTip="Nueva Área" Command="{Binding CrearAreaCommand}" 
                                    Margin="0,0,5,0" Style="{StaticResource MenuButtonStyle}" Padding="5,0"/>
                            <Button Content="✏️" ToolTip="Editar Área" Command="{Binding EditarAreaCommand}" 
                                    Margin="0,0,5,0" Style="{StaticResource MenuButtonStyle}" Padding="5,0"/>
                            <Button Content="❌" ToolTip="Desactivar Área" Command="{Binding EliminarAreaCommand}" 
                                    Style="{StaticResource MenuButtonStyle}" Padding="5,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Lista de Áreas -->
                <ListBox Grid.Row="1" ItemsSource="{Binding Areas}" SelectedItem="{Binding AreaSeleccionada}"
                         BorderThickness="1,0,1,1" BorderBrush="#DDDDDD">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center"/>
                                <Ellipse Grid.Column="1" Width="8" Height="8" Margin="5,0,0,0">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{Binding Activo, Converter={StaticResource StatusColorConverter}}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Separador visual -->
            <GridSplitter Grid.Column="3" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Center" 
                          Background="Transparent"/>

            <!-- Panel de Zonas -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Encabezado de Zonas -->
                <Border Grid.Row="0" Background="#2c3e50" Padding="10,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Zonas" Foreground="White" FontWeight="SemiBold"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                  Visibility="{Binding EsAdministrador, Converter={StaticResource BoolToVis}}">
                            <Button Content="➕" ToolTip="Nueva Zona" Command="{Binding CrearZonaCommand}" 
                                    Margin="0,0,5,0" Style="{StaticResource MenuButtonStyle}" Padding="5,0"/>
                            <Button Content="✏️" ToolTip="Editar Zona" Command="{Binding EditarZonaCommand}" 
                                    Margin="0,0,5,0" Style="{StaticResource MenuButtonStyle}" Padding="5,0"/>
                            <Button Content="❌" ToolTip="Desactivar Zona" Command="{Binding EliminarZonaCommand}" 
                                    Style="{StaticResource MenuButtonStyle}" Padding="5,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Lista de Zonas -->
                <ListBox Grid.Row="1" ItemsSource="{Binding Zonas}" SelectedItem="{Binding ZonaSeleccionada}"
                         BorderThickness="1,0,1,1" BorderBrush="#DDDDDD">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center"/>
                                <Ellipse Grid.Column="1" Width="8" Height="8" Margin="5,0,0,0">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{Binding Activo, Converter={StaticResource StatusColorConverter}}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>