<UserControl x:Class="InventarioComputo.UI.Views.UbicacionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviors="clr-namespace:InventarioComputo.UI.Behaviors"
             xmlns:conv="clr-namespace:InventarioComputo.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="950"
             behaviors:LoadedCommandBehavior.LoadedCommand="{Binding LoadedCommand}">

    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:ActiveStatusConverter x:Key="ActiveStatusConverter"/>
        <conv:BoolToStringConverter x:Key="BoolToStringConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
                Background="#F5F7FA" 
                BorderBrush="#E1E5EB" 
                BorderThickness="0,0,0,1" 
                Padding="24,16">
            <TextBlock Text="Gestión de Ubicaciones" 
                       FontSize="22" 
                       FontWeight="Medium" 
                       Foreground="#2C3E50"/>
        </Border>

        <!-- Barra de herramientas -->
        <Grid Grid.Row="1" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Filtros -->
            <CheckBox Grid.Column="0" 
                      Content="Mostrar inactivos" 
                      IsChecked="{Binding MostrarInactivos}" 
                      VerticalAlignment="Center"/>

            <!-- Acciones -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Nueva Sede" 
                        Command="{Binding CrearSedeCommand}" 
                        Padding="16,8" 
                        Margin="0,0,8,0"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Nueva Área" 
                        Command="{Binding CrearAreaCommand}" 
                        Padding="16,8" 
                        Margin="0,0,8,0"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Nueva Zona" 
                        Command="{Binding CrearZonaCommand}" 
                        Padding="16,8"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Contenido principal -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel de Sedes -->
            <Border Grid.Column="0" 
                    BorderBrush="#E1E5EB" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Background="White" 
                    Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F5F7FA" 
                            BorderThickness="0,0,0,1" 
                            BorderBrush="#E1E5EB" 
                            Padding="15,12">
                        <TextBlock Text="Sedes" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2C3E50"/>
                    </Border>

                    <ListView Grid.Row="1" 
                              BorderThickness="0"
                              ItemsSource="{Binding Sedes}" 
                              SelectedItem="{Binding SedeSeleccionada}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Nombre}" 
                                               VerticalAlignment="Center" 
                                               Margin="0,8"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Activo, Converter={StaticResource BoolToStringConverter}}" 
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0"
                                               Foreground="#666666"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="10"
                                Visibility="{Binding SedeSeleccionada, Converter={StaticResource ObjectToVisibilityConverter}}">
                        <Button Content="Editar" 
                                Command="{Binding EditarSedeCommand}" 
                                Padding="10,5" 
                                Margin="0,0,8,0"
                                Background="#F0F2F5" 
                                Foreground="#2C3E50" 
                                BorderThickness="1"
                                BorderBrush="#D1D5DB">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Desactivar" 
                                Command="{Binding EliminarSedeCommand}" 
                                Padding="10,5"
                                Background="#E74C3C" 
                                Foreground="White" 
                                BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panel de Áreas -->
            <Border Grid.Column="1" 
                    BorderBrush="#E1E5EB" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Background="White" 
                    Margin="8,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F5F7FA" 
                            BorderThickness="0,0,0,1" 
                            BorderBrush="#E1E5EB" 
                            Padding="15,12">
                        <TextBlock Text="Áreas" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2C3E50"/>
                    </Border>

                    <ListView Grid.Row="1" 
                              BorderThickness="0"
                              ItemsSource="{Binding Areas}" 
                              SelectedItem="{Binding AreaSeleccionada}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Nombre}" 
                                               VerticalAlignment="Center" 
                                               Margin="0,8"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Activo, Converter={StaticResource BoolToStringConverter}}" 
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0"
                                               Foreground="#666666"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="10"
                                Visibility="{Binding AreaSeleccionada, Converter={StaticResource ObjectToVisibilityConverter}}">
                        <Button Content="Editar" 
                                Command="{Binding EditarAreaCommand}" 
                                Padding="10,5" 
                                Margin="0,0,8,0"
                                Background="#F0F2F5" 
                                Foreground="#2C3E50" 
                                BorderThickness="1"
                                BorderBrush="#D1D5DB">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Desactivar" 
                                Command="{Binding EliminarAreaCommand}" 
                                Padding="10,5"
                                Background="#E74C3C" 
                                Foreground="White" 
                                BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panel de Zonas -->
            <Border Grid.Column="2" 
                    BorderBrush="#E1E5EB" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Background="White" 
                    Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F5F7FA" 
                            BorderThickness="0,0,0,1" 
                            BorderBrush="#E1E5EB" 
                            Padding="15,12">
                        <TextBlock Text="Zonas" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2C3E50"/>
                    </Border>

                    <ListView Grid.Row="1" 
                              BorderThickness="0"
                              ItemsSource="{Binding Zonas}" 
                              SelectedItem="{Binding ZonaSeleccionada}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Nombre}" 
                                               VerticalAlignment="Center" 
                                               Margin="0,8"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Activo, Converter={StaticResource BoolToStringConverter}}" 
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0"
                                               Foreground="#666666"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="10"
                                Visibility="{Binding ZonaSeleccionada, Converter={StaticResource ObjectToVisibilityConverter}}">
                        <Button Content="Editar" 
                                Command="{Binding EditarZonaCommand}" 
                                Padding="10,5" 
                                Margin="0,0,8,0"
                                Background="#F0F2F5" 
                                Foreground="#2C3E50" 
                                BorderThickness="1"
                                BorderBrush="#D1D5DB">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Desactivar" 
                                Command="{Binding EliminarZonaCommand}" 
                                Padding="10,5"
                                Background="#E74C3C" 
                                Foreground="White" 
                                BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Indicador de carga -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Padding="20">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Background="White">
    
                    <TextBlock Text="Cargando datos..." 
                               FontSize="16" 
                               Margin="0,0,0,12"/>
                    <ProgressBar IsIndeterminate="True" 
                                 Height="4" 
                                 Width="200"/>
                </StackPanel>
            </Border>
            
        </Grid>
    </Grid>
</UserControl>