<UserControl x:Class="InventarioComputo.UI.Views.TrabajadoresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Buscador sin PlaceholderText (WPF no lo soporta) -->
        <TextBox x:Name="txtBuscar"
                 Width="300"
                 HorizontalAlignment="Left"
                 Margin="0,0,0,8"
                 Text="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}">
            <!-- Watermark simple -->
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                    <TextBlock Margin="4,2,0,0"
                                               Foreground="Gray"
                                               IsHitTestVisible="False"
                                               Text="Buscar empleado..."
                                               Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Empleados}"
                  SelectedItem="{Binding EmpleadoSeleccionado, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombreCompleto}" Width="*" />
                <DataGridTextColumn Header="Puesto" Binding="{Binding Puesto}" Width="200" />
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="80" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>