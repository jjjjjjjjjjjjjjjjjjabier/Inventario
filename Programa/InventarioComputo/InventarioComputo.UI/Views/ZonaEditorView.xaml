<Window x:Class="InventarioComputo.UI.Views.ZonaEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Titulo}"
        SizeToContent="Height"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
                Background="#F5F7FA" 
                BorderBrush="#E1E5EB" 
                BorderThickness="0,0,0,1" 
                Padding="24,16">
            <TextBlock Text="{Binding Titulo}" 
                       FontSize="22" 
                       FontWeight="Medium" 
                       Foreground="#2C3E50"/>
        </Border>

        <!-- Formulario -->
        <StackPanel Grid.Row="1" Margin="24,16">
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Área" 
                           FontWeight="Medium" 
                           Margin="0,0,0,4"/>
                <TextBlock Text="{Binding NombreArea}" 
                           FontSize="16" 
                           Padding="10,8" 
                           Background="#F5F7FA"/>
                <Border BorderBrush="#FFD0D0D0" BorderThickness="0,0,0,1">
                    <TextBlock Text="Nombre:" Margin="0,0,5,0"/>
                </Border>
            </StackPanel>

            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Nombre de la Zona *" 
                           FontWeight="Medium" 
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding Nombre}" 
                         Padding="10,8" 
                         BorderBrush="#D1D5DB" 
                         BorderThickness="1"/>
            </StackPanel>

            <CheckBox Content="Activo" 
                      IsChecked="{Binding Activo}" 
                      Margin="0,8,0,12"/>

            <TextBlock Text="* Campo obligatorio" 
                       Foreground="#9E9E9E" 
                       FontStyle="Italic"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Botones de acción -->
        <Border Grid.Row="2" 
                Background="#F5F7FA" 
                BorderBrush="#E1E5EB" 
                BorderThickness="0,1,0,0" 
                Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" 
                        Command="{Binding CloseCommand}" 
                        Padding="16,8" 
                        Margin="0,0,12,0"
                        Background="#F0F2F5" 
                        Foreground="#2C3E50" 
                        BorderBrush="#D1D5DB"
                        BorderThickness="1">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Guardar" 
                        Command="{Binding GuardarCommand}" 
                        Padding="16,8"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <!-- Overlay de carga -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Padding="20" 
       BorderBrush="#E1E5EB" 
       BorderThickness="1" 
       CornerRadius="6">
                <StackPanel HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Background="White">
   
    <TextBlock Text="Guardando..." 
               FontSize="16" 
               Margin="0,0,0,12"/>
    <ProgressBar IsIndeterminate="True" 
                 Height="4" 
                 Width="200"/>
</StackPanel>
            </Border>
            
        </Grid>
    </Grid>
</Window>