<Window x:Class="InventarioComputo.UI.Views.AsignarEquipoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Contenido de asignación (simplificado para evitar errores de diccionarios) -->
        <StackPanel>
            <TextBlock Text="Asignación de Equipo" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Equipo:" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding EquipoSeleccionado.NumeroSerie}" IsReadOnly="True" Width="220"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Usuario:" Width="120" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Usuarios}" SelectedItem="{Binding UsuarioSeleccionado}" Width="220"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Ubicación (Zona):" Width="120" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Zonas}" SelectedItem="{Binding ZonaSeleccionada}" Width="220"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <!-- Usa el converter global, asignado en App.xaml, en una propiedad booleana -->
            <Button Content="Guardar" Command="{Binding GuardarCommand}"
                    IsEnabled="{Binding UsuarioSeleccionado, Converter={StaticResource NotNullToBoolConverter}}"
                    Style="{StaticResource ActionButtonStyle}" Background="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
            <Button Content="Cancelar" Command="{Binding CloseCommand}" Style="{StaticResource ActionButtonStyle}" Background="#888"/>
        </StackPanel>
    </Grid>
</Window>