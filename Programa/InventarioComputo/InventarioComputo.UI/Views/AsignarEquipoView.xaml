<Window x:Class="InventarioComputo.UI.Views.AsignarEquipoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioComputo.UI.Views"
        xmlns:conv="clr-namespace:InventarioComputo.UI.Converters"
        mc:Ignorable="d"
        Title="{Binding Titulo}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        MaxWidth="600"
        MinWidth="450">
    <Window.Resources>
        <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Información actual -->
        <GroupBox Grid.Row="0" Header="Información Actual" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Usuario actual:" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding UsuarioActual.NombreCompleto, TargetNullValue='(Sin asignar)'}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Ubicación actual:" Margin="0,5,10,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ZonaActual.Nombre, TargetNullValue='(Sin ubicación)'}" Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Formulario de asignación -->
        <GroupBox Grid.Row="1" Header="Nueva Asignación" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Usuario -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Asignar a usuario:" Margin="0,0,10,5"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                          ItemsSource="{Binding Usuarios}"
                          SelectedItem="{Binding UsuarioSeleccionado}"
                          DisplayMemberPath="NombreCompleto"
                          Margin="0,0,0,5"/>

                <!-- Sede -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Sede:" Margin="0,5,10,5"/>
                <ComboBox Grid.Row="1" Grid.Column="1" 
                          ItemsSource="{Binding Sedes}"
                          SelectedItem="{Binding SedeSeleccionada}"
                          DisplayMemberPath="Nombre"
                          Margin="0,5,0,5"/>

                <!-- Área -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Área:" Margin="0,5,10,5"/>
                <ComboBox Grid.Row="2" Grid.Column="1" 
                          ItemsSource="{Binding Areas}"
                          SelectedItem="{Binding AreaSeleccionada}"
                          DisplayMemberPath="Nombre"
                          IsEnabled="{Binding SedeSeleccionada, Converter={StaticResource NullToBoolConverter}}"
                          Margin="0,5,0,5"/>

                <!-- Zona -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Zona:" Margin="0,5,10,5"/>
                <ComboBox Grid.Row="3" Grid.Column="1" 
                          ItemsSource="{Binding Zonas}"
                          SelectedItem="{Binding ZonaSeleccionada}"
                          DisplayMemberPath="Nombre"
                          IsEnabled="{Binding AreaSeleccionada, Converter={StaticResource NullToBoolConverter}}"
                          Margin="0,5,0,5"/>

                <!-- Motivo -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Motivo:" Margin="0,5,10,5"/>
                <TextBox Grid.Row="4" Grid.Column="1" 
                         Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True" TextWrapping="Wrap" 
                         Height="60" Margin="0,5,0,5"/>
            </Grid>
        </GroupBox>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Guardar" Command="{Binding GuardarCommand}" 
                    Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Cancelar" Command="{Binding CloseCommand}" 
                    Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>