<Window x:Class="InventarioComputo.UI.Views.EquipoComputoEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:InventarioComputo.UI.Converters"
        mc:Ignorable="d"
        Title="{Binding Titulo}"
        Height="650"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Convertidor estándar de WPF -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Recurso local necesario para IsEnabled -->
        <conv:NotNullToBoolConverter x:Key="NotNullToBoolConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
                Background="#F5F7FA" 
                BorderBrush="#E1E5EB" 
                BorderThickness="0,0,0,1" 
                Padding="24,16">
            <TextBlock Text="{Binding Titulo}" 
                       FontSize="22" 
                       FontWeight="Medium" 
                       Foreground="#2C3E50"/>
        </Border>

        <!-- Contenido del formulario -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" 
                      Padding="24,16">
            <StackPanel>
                <!-- Información básica -->
                <TextBlock Text="Información Básica" 
                           FontWeight="SemiBold" 
                           FontSize="16" 
                           Margin="0,0,0,12"/>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Número de Serie *" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding NumeroSerie}" 
                                 Padding="10,8" 
                                 BorderBrush="#D1D5DB" 
                                 BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Etiqueta de Inventario *" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding EtiquetaInventario}" 
                                 Padding="10,8" 
                                 BorderBrush="#D1D5DB" 
                                 BorderThickness="1"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Marca *" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Marca}" 
                                 Padding="10,8" 
                                 BorderBrush="#D1D5DB" 
                                 BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Modelo *" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Modelo}" 
                                 Padding="10,8" 
                                 BorderBrush="#D1D5DB" 
                                 BorderThickness="1"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Tipo de Equipo *" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding TiposEquipo}" 
                                  SelectedItem="{Binding TipoEquipoSeleccionado}"
                                  DisplayMemberPath="Nombre" 
                                  Padding="10,8" 
                                  BorderBrush="#D1D5DB" 
                                  BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Estado *" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Estados}" 
                                  SelectedItem="{Binding EstadoSeleccionado}"
                                  DisplayMemberPath="Nombre" 
                                  Padding="10,8" 
                                  BorderBrush="#D1D5DB" 
                                  BorderThickness="1"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Fecha de Adquisición" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,4"/>
                        <DatePicker SelectedDate="{Binding FechaAdquisicion}" 
                                   Padding="10,8" 
                                   BorderBrush="#D1D5DB" 
                                   BorderThickness="1"/>
                    </StackPanel>

                    <CheckBox Grid.Column="1" 
                              Content="Activo" 
                              IsChecked="{Binding Activo}"
                              VerticalAlignment="Bottom"
                              Margin="8,0,0,12"/>
                </Grid>

                <!-- Características -->
                <TextBlock Text="Características y Observaciones" 
                           FontWeight="SemiBold" 
                           FontSize="16" 
                           Margin="0,12,0,12"/>

                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Características *" 
                               FontWeight="Medium" 
                               Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Caracteristicas}" 
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="80"
                             Padding="10,8" 
                             BorderBrush="#D1D5DB" 
                             BorderThickness="1"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Observaciones" 
                               FontWeight="Medium" 
                               Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Observaciones}" 
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"
                             Padding="10,8" 
                             BorderBrush="#D1D5DB" 
                             BorderThickness="1"/>
                </StackPanel>

                <!-- Ubicación -->
                <TextBlock Text="Ubicación" 
                           FontWeight="SemiBold" 
                           FontSize="16" 
                           Margin="0,12,0,12"/>

                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Sede" 
                               FontWeight="Medium" 
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Sedes}" 
                              SelectedItem="{Binding SedeSeleccionada}"
                              DisplayMemberPath="Nombre" 
                              Padding="10,8" 
                              BorderBrush="#D1D5DB" 
                              BorderThickness="1"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12"
                            IsEnabled="{Binding SedeSeleccionada, Converter={StaticResource NotNullToBoolConverter}}">
                    <TextBlock Text="Área" 
                               FontWeight="Medium" 
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Areas}" 
                              SelectedItem="{Binding AreaSeleccionada}"
                              DisplayMemberPath="Nombre" 
                              Padding="10,8" 
                              BorderBrush="#D1D5DB" 
                              BorderThickness="1"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12"
                            IsEnabled="{Binding AreaSeleccionada, Converter={StaticResource NotNullToBoolConverter}}">
                    <TextBlock Text="Zona" 
                               FontWeight="Medium" 
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Zonas}" 
                              SelectedItem="{Binding ZonaSeleccionada}"
                              DisplayMemberPath="Nombre" 
                              Padding="10,8" 
                              BorderBrush="#D1D5DB" 
                              BorderThickness="1"/>
                </StackPanel>

                <TextBlock Text="* Campos obligatorios" 
                           Foreground="#9E9E9E" 
                           FontStyle="Italic"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones de acción -->
        <Border Grid.Row="2" 
                Background="#F5F7FA" 
                BorderBrush="#E1E5EB" 
                BorderThickness="0,1,0,0" 
                Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" 
                        Command="{Binding CloseCommand}" 
                        Padding="16,8" 
                        Margin="0,0,12,0"
                        Background="#F0F2F5" 
                        Foreground="#2C3E50" 
                        BorderBrush="#D1D5DB"
                        BorderThickness="1">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Guardar" 
                        Command="{Binding GuardarCommand}" 
                        Padding="16,8"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <!-- Overlay de carga -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Padding="20" 
                   BorderBrush="#E1E5EB" 
                   BorderThickness="1" 
                   CornerRadius="6">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Background="White">
                    
                    <TextBlock Text="Cargando..." 
                               FontSize="16" 
                               Margin="0,0,0,12"/>
                    <ProgressBar IsIndeterminate="True" 
                                 Height="4" 
                                 Width="200"/>  
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>