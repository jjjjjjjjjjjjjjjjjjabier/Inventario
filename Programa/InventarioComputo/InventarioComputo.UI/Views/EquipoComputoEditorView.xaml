<Window x:Class="InventarioComputo.UI.Views.EquipoComputoEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Titulo}"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        MinWidth="600" MinHeight="500"
        ResizeMode="NoResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Campos -->
            <Label Grid.Row="0" Content="Número de Serie:"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NumeroSerie}" Margin="0,5"/>

            <Label Grid.Row="1" Content="Etiqueta:"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EtiquetaInventario}" Margin="0,5"/>

            <Label Grid.Row="2" Content="Marca:"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Marca}" Margin="0,5"/>

            <Label Grid.Row="3" Content="Modelo:"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Modelo}" Margin="0,5"/>

            <Label Grid.Row="4" Content="Características:"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Caracteristicas}" 
                     TextWrapping="Wrap" AcceptsReturn="True" Height="60" Margin="0,5"/>

            <Label Grid.Row="5" Content="Observaciones:"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Observaciones}"
                     TextWrapping="Wrap" AcceptsReturn="True" Height="60" Margin="0,5"/>

            <Label Grid.Row="6" Content="Fecha Adquisición:"/>
            <DatePicker Grid.Row="6" Grid.Column="1" SelectedDate="{Binding FechaAdquisicion}" Margin="0,5"/>

            <Label Grid.Row="7" Content="Tipo de Equipo:"/>
            <ComboBox Grid.Row="7" Grid.Column="1" 
                      ItemsSource="{Binding TiposEquipo}"
                      SelectedItem="{Binding TipoEquipoSeleccionado}"
                      DisplayMemberPath="Nombre" Margin="0,5"/>

            <Label Grid.Row="8" Content="Estado:"/>
            <ComboBox Grid.Row="8" Grid.Column="1"
                      ItemsSource="{Binding Estados}"
                      SelectedItem="{Binding EstadoSeleccionado}"
                      DisplayMemberPath="Nombre" Margin="0,5"/>

            <Label Grid.Row="9" Content="Ubicación:"/>
            <StackPanel Grid.Row="9" Grid.Column="1" Margin="0,5">
                <ComboBox ItemsSource="{Binding Sedes}"
                         SelectedItem="{Binding SedeSeleccionada}"
                         DisplayMemberPath="Nombre" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Areas}"
                         SelectedItem="{Binding AreaSeleccionada}"
                         DisplayMemberPath="Nombre" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Zonas}"
                         SelectedItem="{Binding ZonaSeleccionada}"
                         DisplayMemberPath="Nombre"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Guardar" Command="{Binding GuardarCommand}" />
                <Button Content="Cancelar" Command="{Binding CloseCommand}" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>