<Window x:Class="InventarioComputo.UI.Views.HistorialEquipoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Titulo}" 
        Width="800" Height="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Informaci&#243;n del Equipo -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding EquipoInfo}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding DetalleEquipo}" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Lista de Movimientos -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Movimientos}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="#F5F5F5"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaMovimiento, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="130"/>
                <DataGridTextColumn Header="Usuario Anterior" Binding="{Binding UsuarioAnterior.NombreCompleto, TargetNullValue='(Sin asignar)'}" Width="150"/>
                <DataGridTextColumn Header="Usuario Nuevo" Binding="{Binding UsuarioNuevo.NombreCompleto, TargetNullValue='(Sin asignar)'}" Width="150"/>
                <DataGridTextColumn Header="Ubicaci&#243;n Anterior" Binding="{Binding ZonaAnterior.Nombre, TargetNullValue='(Sin ubicaci&#243;n)'}" Width="150"/>
                <DataGridTextColumn Header="Ubicaci&#243;n Nueva" Binding="{Binding ZonaNueva.Nombre, TargetNullValue='(Sin ubicaci&#243;n)'}" Width="150"/>
                <DataGridTextColumn Header="Motivo" Binding="{Binding Motivo}" Width="*"/>
                <DataGridTextColumn Header="Registrado Por" Binding="{Binding UsuarioResponsable.NombreCompleto}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Cerrar" Command="{Binding CloseCommand}"
                HorizontalAlignment="Right" Width="100" Height="30"/>
    </Grid>
</Window>