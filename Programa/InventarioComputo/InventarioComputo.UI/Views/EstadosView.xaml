<UserControl x:Class="InventarioComputo.UI.Views.EstadosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converters="clr-namespace:InventarioComputo.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:ColorFromHexConverter x:Key="ColorFromHexConverter"/>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedAsyncCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="Nuevo" Command="{Binding CrearAsyncCommand}"/>
                <Button Content="Editar" Command="{Binding EditarAsyncCommand}"/>
                <Button Content="Eliminar" Command="{Binding EliminarAsyncCommand}"/>
            </StackPanel>

            <CheckBox Content="Mostrar Inactivos" 
                      IsChecked="{Binding MostrarInactivos, Mode=TwoWay}"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"/>
        </DockPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Estados}"
                  SelectedItem="{Binding EstadoSeleccionado, Mode=TwoWay}"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="2*"/>
                <DataGridTemplateColumn Header="Color" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="4" Height="20" Width="60" BorderBrush="#AAA" BorderThickness="1"
                                    Background="{Binding ColorHex, Converter={StaticResource ColorFromHexConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="1" Background="#7F000000" CornerRadius="5"
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Cargando..." Foreground="White" FontSize="18"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>