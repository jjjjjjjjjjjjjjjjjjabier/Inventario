<UserControl x:Class="InventarioComputo.UI.Views.EstadosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Estados" FontSize="22" FontWeight="Bold"/>
                <CheckBox Content="Mostrar inactivos" IsChecked="{Binding MostrarInactivos}" Margin="16,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Nuevo" Command="{Binding CrearCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                <Button Content="Editar" Command="{Binding EditarCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                <Button Content="Desactivar" Command="{Binding EliminarCommand}" Style="{StaticResource DangerButton}"/>
            </StackPanel>
        </Grid>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Estados}" SelectedItem="{Binding EstadoSeleccionado}"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                  RowHeaderWidth="0" Margin="0,5,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="220"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                <DataGridTemplateColumn Header="Color" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Height="18" Width="40" CornerRadius="3"
                                    Background="{Binding ColorHex}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>      