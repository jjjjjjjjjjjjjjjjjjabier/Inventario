<UserControl x:Class="InventarioComputo.UI.Views.EquiposComputoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviors="clr-namespace:InventarioComputo.UI.Behaviors"
             xmlns:conv="clr-namespace:InventarioComputo.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="950"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <conv:ActiveStatusConverter x:Key="ActiveStatusConverter"/>
        <conv:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Estilo para textos en celdas: alineación, trimming y colores -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>

        <!-- Estilo para encabezados de columna -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F6F8"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Estilo de fila: altura, hover y selección -->
        <Style TargetType="DataGridRow">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F6FB"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F1FF"/>
                    <Setter Property="Foreground" Value="#1F2D3D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo de celda: padding y enfoque limpio -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#1F2D3D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
                Background="#F5F7FA" 
                BorderBrush="#E1E5EB" 
                BorderThickness="0,0,0,1" 
                Padding="24,16">
            <TextBlock Text="Equipos de Cómputo" 
                       FontSize="22" 
                       FontWeight="Medium" 
                       Foreground="#2C3E50"/>
        </Border>

        <!-- Barra de herramientas -->
        <Grid Grid.Row="1" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Filtros -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <CheckBox Content="Mostrar inactivos" 
                          IsChecked="{Binding MostrarInactivos}" 
                          VerticalAlignment="Center" 
                          Margin="0,0,16,0"/>

                <Border CornerRadius="6" 
                        BorderThickness="1" 
                        BorderBrush="#D1D5DB" 
                        Background="White" 
                        Padding="8,0" 
                        Width="300">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 BorderThickness="0"
                                 Padding="4" 
                                 VerticalContentAlignment="Center"
                                 Text="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                    <TextBlock Text="Buscar equipos..." 
                                                               Foreground="#A0AEC0"
                                                               Margin="4,0,0,0"
                                                               VerticalAlignment="Center"
                                                               IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button Grid.Column="1" 
                                Content="🔍"
                                Padding="8,4" 
                                BorderThickness="0" 
                                Background="Transparent"
                                Command="{Binding BuscarCommand}"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Acciones -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Nuevo" 
                        Command="{Binding CrearCommand}" 
                        Padding="16,8" 
                        Margin="0,0,8,0"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Editar" 
                        Command="{Binding EditarCommand}" 
                        Padding="16,8" 
                        Margin="0,0,8,0"
                        Background="#F0F2F5" 
                        Foreground="#2C3E50" 
                        BorderThickness="1"
                        BorderBrush="#D1D5DB"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Desactivar" 
                        Command="{Binding EliminarCommand}" 
                        Padding="16,8" 
                        Margin="0,0,8,0"
                        Background="#E74C3C" 
                        Foreground="White" 
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Ver Historial" 
                        Command="{Binding VerHistorialCommand}" 
                        Padding="16,8" 
                        Margin="0,0,8,0"
                        Background="#F0F2F5" 
                        Foreground="#2C3E50" 
                        BorderThickness="1"
                        BorderBrush="#D1D5DB"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Asignar" 
                        Command="{Binding AsignarEquipoCommand}" 
                        Padding="16,8"
                        Background="#2ECC71" 
                        Foreground="White" 
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <!-- DataGrid con mejor manejo del espacio -->
        <Border Grid.Row="2" 
                Margin="24,0,24,24" 
                BorderThickness="1" 
                BorderBrush="#E5E7EB"
                CornerRadius="8"
                Background="White"
                Padding="1">

            <DataGrid ItemsSource="{Binding Equipos}" 
                      SelectedItem="{Binding EquipoSeleccionado}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#EEF1F5"
                      AlternatingRowBackground="#FAFAFB"
                      RowBackground="White"
                      AlternationCount="2"
                      RowHeaderWidth="0"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="True"
                      CanUserResizeRows="False"
                      CanUserSortColumns="True"
                      BorderThickness="0"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True">

                <DataGrid.Columns>
                    <!-- Columnas con anchos optimizados -->
                    <DataGridTextColumn Header="Num. Serie" 
                                        Binding="{Binding NumeroSerie}" 
                                        Width="110"
                                        ElementStyle="{StaticResource CellTextStyle}"/>
                    <DataGridTextColumn Header="Etiqueta" 
                                        Binding="{Binding EtiquetaInventario}" 
                                        Width="100"
                                        ElementStyle="{StaticResource CellTextStyle}"/>
                    <DataGridTextColumn Header="Marca" 
                                        Binding="{Binding Marca}" 
                                        Width="90"
                                        ElementStyle="{StaticResource CellTextStyle}"/>
                    <DataGridTextColumn Header="Modelo" 
                                        Binding="{Binding Modelo}" 
                                        Width="110"
                                        ElementStyle="{StaticResource CellTextStyle}"/>
                    <DataGridTextColumn Header="Tipo" 
                                        Binding="{Binding TipoEquipo.Nombre}" 
                                        Width="110"
                                        ElementStyle="{StaticResource CellTextStyle}"/>
                    <DataGridTextColumn Header="Estado" 
                                        Binding="{Binding Estado.Nombre}" 
                                        Width="100"
                                        ElementStyle="{StaticResource CellTextStyle}"/>
                    <DataGridTextColumn Header="Asignado a"
                                        Binding="{Binding Empleado.NombreCompleto}"
                                        Width="180"
                                        ElementStyle="{StaticResource CellTextStyle}"/>
                    <DataGridTextColumn Header="Ubicación" 
                                        Binding="{Binding Zona.Nombre}" 
                                        Width="120"
                                        ElementStyle="{StaticResource CellTextStyle}"/>
                    <DataGridTextColumn Header="Adquisición" 
                                        Binding="{Binding FechaAdquisicion, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                        Width="100"
                                        ElementStyle="{StaticResource CellTextStyle}"/>
                    <DataGridTemplateColumn Header="Activo" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Activo, Converter={StaticResource BoolToStringConverter}}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource CellTextStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Indicador de carga -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Padding="20"
                    BorderThickness="1"
                    BorderBrush="#E1E5EB"
                    CornerRadius="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="White">
                <StackPanel>
                    <TextBlock Text="Cargando equipos..."
                               FontSize="16"
                               Margin="0,0,0,10"/>
                    <ProgressBar IsIndeterminate="True"
                                 Height="4"
                                 Width="220"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>