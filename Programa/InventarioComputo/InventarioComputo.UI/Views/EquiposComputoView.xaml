<UserControl x:Class="InventarioComputo.UI.Views.EquiposComputoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Nuevo" Command="{Binding CrearCommand}" Padding="16,6" Margin="0,0,8,0"/>
            <Button Content="Editar" Command="{Binding EditarCommand}" Padding="16,6" Margin="0,0,8,0"/>
            <Button Content="Desactivar" Command="{Binding EliminarCommand}" Padding="16,6"/>
        </StackPanel>

        <!-- Barra de búsqueda -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox Width="240" Margin="0,0,8,0"
                     Text="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Buscar por serie, etiqueta, usuario, marca o modelo"/>
            <Button Content="Buscar" Command="{Binding BuscarCommand}" />
            <CheckBox Content="Mostrar inactivos" Margin="12,0,0,0"
                      IsChecked="{Binding MostrarInactivos}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Equipos}" AutoGenerateColumns="False"
                  CanUserAddRows="False" IsReadOnly="True" Margin="0"
                  ColumnHeaderHeight="28" RowHeight="28">
            <DataGrid.Columns>
                <DataGridTextColumn Header="No. Serie" Binding="{Binding NumeroSerie}" MinWidth="140"/>
                <DataGridTextColumn Header="Etiqueta" Binding="{Binding EtiquetaInventario}" MinWidth="140"/>
                <DataGridTextColumn Header="Marca" Binding="{Binding Marca}" MinWidth="120"/>
                <DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}" MinWidth="120"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoEquipo.Nombre}" MinWidth="140"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado.Nombre}" MinWidth="140"/>
                <DataGridTextColumn Header="Ubicación" Binding="{Binding Zona.Area.Sede.Nombre}" MinWidth="120"/>
                <DataGridTextColumn Header="Ár" Binding="{Binding Zona.Area.Nombre}" MinWidth="120"/>
                <DataGridTextColumn Header="Zn" Binding="{Binding Zona.Nombre}" MinWidth="120"/>
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" MinWidth="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>