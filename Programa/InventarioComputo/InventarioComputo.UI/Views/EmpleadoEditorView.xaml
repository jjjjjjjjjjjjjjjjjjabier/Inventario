<Window x:Class="InventarioComputo.UI.Views.EmpleadoEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Titulo}"
        SizeToContent="Height"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding Titulo}"
                   FontSize="20"
                   FontWeight="Medium"
                   Margin="0,0,0,20"
                   Foreground="#2C3E50"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Nombre completo" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBox Text="{Binding NombreCompleto, UpdateSourceTrigger=PropertyChanged}"
                     Padding="10,8" Margin="0,0,0,12" BorderThickness="1" BorderBrush="#D1D5DB"/>

            <TextBlock Text="Correo electrónico" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBox Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}"
                     Padding="10,8" Margin="0,0,0,12" BorderThickness="1" BorderBrush="#D1D5DB"/>

            <TextBlock Text="Teléfono" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBox x:Name="TelefonoTextBox"
                     Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"
                     Padding="10,8" Margin="0,0,0,12" BorderThickness="1" BorderBrush="#D1D5DB"
                     PreviewTextInput="TelefonoTextBox_PreviewTextInput"
                     DataObject.Pasting="TelefonoTextBox_Pasting"/>
            <CheckBox Content="Activo" IsChecked="{Binding Activo}" Margin="0,8,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancelar" Command="{Binding CloseCommand}"
                    Padding="16,8" Margin="0,0,8,0"
                    Background="#F0F2F5" Foreground="#2C3E50" BorderThickness="1" BorderBrush="#D1D5DB">
                <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="4"/></Style></Button.Resources>
            </Button>
            <Button Content="Guardar" Command="{Binding GuardarCommand}"
                    Padding="16,8" Background="#3498DB" Foreground="White" BorderThickness="0">
                <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="4"/></Style></Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>