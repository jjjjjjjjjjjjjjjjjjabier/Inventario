<Window x:Class="InventarioComputo.UI.Views.SedeEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioComputo.UI.Views"
        mc:Ignorable="d"
        Title="{Binding Titulo}" 
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <TextBlock Text="{Binding Titulo}" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>
        
        <!-- Formulario -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Label Content="Nombre:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
            
            <CheckBox Content="Activo" IsChecked="{Binding Activo}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Guardar" Command="{Binding GuardarCommand}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Cancelar" Command="{Binding CloseCommand}" Width="80"/>
        </StackPanel>
    </Grid>
</Window>