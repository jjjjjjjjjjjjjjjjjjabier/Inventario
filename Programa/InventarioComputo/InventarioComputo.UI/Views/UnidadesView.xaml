<UserControl x:Class="InventarioComputo.UI.Views.UnidadesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioComputo.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel superior: Filtros y acciones -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Filtros -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <CheckBox Content="Mostrar inactivos" IsChecked="{Binding MostrarInactivos}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Botones de acción (solo para administradores) -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" 
                      Visibility="{Binding EsAdministrador, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button Content="Nuevo" Command="{Binding CrearCommand}" Padding="10,5" Margin="0,0,5,0"/>
                <Button Content="Editar" Command="{Binding EditarCommand}" Padding="10,5" Margin="0,0,5,0"/>
                <Button Content="Desactivar" Command="{Binding EliminarCommand}" Padding="10,5"/>
            </StackPanel>
        </Grid>

        <!-- Lista de unidades -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Unidades}" 
                  SelectedItem="{Binding UnidadSeleccionada}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HorizontalGridLinesBrush="#EEEEEE"
                  VerticalGridLinesBrush="#EEEEEE">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Abreviatura" Binding="{Binding Abreviatura}" Width="150"/>
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>