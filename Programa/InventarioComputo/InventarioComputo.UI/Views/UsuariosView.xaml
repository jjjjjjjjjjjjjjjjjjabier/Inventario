<UserControl x:Class="InventarioComputo.UI.Views.UsuariosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarioComputo.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Nuevo Usuario" 
                    Command="{Binding CrearCommand}"
                    Margin="0,0,10,0" Padding="8,3"/>
            <Button Content="Editar" 
                    Command="{Binding EditarCommand}"
                    Margin="0,0,10,0" Padding="8,3"/>
            <Button Content="Eliminar" 
                    Command="{Binding EliminarCommand}"
                    Margin="0,0,10,0" Padding="8,3"/>
            <CheckBox Content="Mostrar inactivos" 
                      IsChecked="{Binding MostrarInactivos}" 
                      VerticalAlignment="Center" 
                      Margin="10,0,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Usuarios}" 
                  SelectedItem="{Binding UsuarioSeleccionado}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Usuario" Binding="{Binding NombreUsuario}" Width="150"/>
                <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="200"/>
                <DataGridTemplateColumn Header="Activo" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Activo, Mode=OneWay}" 
                                      IsEnabled="False" 
                                      HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>