<Window x:Class="InventarioComputo.UI.Views.EstadoEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Titulo}"
        Height="421" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Border Padding="25" Margin="0,0,0,34">
        <Grid Margin="0,0,0,-27">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Grid.Row="0" 
                       Text="{Binding Titulo}" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       Foreground="#2C3E50"/>

            <!-- Campos -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Nombre:" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                         Height="35"
                         Padding="10,5"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         BorderBrush="#CCCCCC"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Descripcion:" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Padding="10,5"
                         VerticalContentAlignment="Top"
                         VerticalScrollBarVisibility="Auto"
                         BorderThickness="1"
                         BorderBrush="#CCCCCC"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Color (Hex):" Style="{StaticResource LabelStyle}"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding ColorHex, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             Padding="10,5"
                             VerticalContentAlignment="Center"
                             BorderThickness="1"
                             BorderBrush="#CCCCCC"/>

                    <Border Grid.Column="1"
                            Width="35" 
                            Height="35"
                            Margin="10,0,0,0"
                            Background="{Binding ColorHex, Converter={StaticResource StringToColorConverter}}"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"/>
                </Grid>
            </StackPanel>

            <!-- Activo -->
            <CheckBox Grid.Row="2" 
                      Content="Activo" 
                      IsChecked="{Binding Activo}"
                      Margin="0,0,0,20"/>

            <!-- Botones -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="Guardar" 
                        Command="{Binding GuardarCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="0,0,10,0"/>

                <Button Content="Cancelar" 
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>