<Window x:Class="InventarioComputo.UI.Views.UnidadEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2008"
        mc:Ignorable="d"
        Title="Editor de Unidad"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        d:DataContext="{d:DesignInstance Type=vm:UnidadEditorViewModel}"
        xmlns:vm="clr-namespace:InventarioComputo.UI.ViewModels">

    <Border Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Nombre:" Grid.Row="0"/>
            <TextBox Text="{Binding Entidad.Nombre, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Margin="90,0,0,0" MinWidth="250"/>

            <TextBlock Text="Abreviatura:" Grid.Row="1" Margin="0,8,0,0"/>
            <TextBox Text="{Binding Entidad.Abreviatura, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="90,8,0,0"/>

            <CheckBox IsChecked="{Binding Entidad.Activo}" Content="Activo" Grid.Row="2" Margin="90,12,0,0"/>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Guardar" Command="{Binding GuardarCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" IsDefault="True"/>
                <Button Content="Cancelar" IsCancel="True" Margin="8,0,0,0"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>