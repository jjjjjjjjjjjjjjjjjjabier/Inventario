<Window x:Class="InventarioComputo.UI.Views.AreaEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Titulo}" Height="320" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Titulo}" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1">
            <Label Content="Nombre:" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding Nombre}" Style="{StaticResource TextBoxStyle}"/>
            <CheckBox Content="Activo" IsChecked="{Binding Activo}" Style="{StaticResource CheckBoxStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Guardar" Command="{Binding GuardarCommand}" Style="{StaticResource DialogButtonStyle}"/>
            <Button Content="Cancelar" Command="{Binding CloseCommand}" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>